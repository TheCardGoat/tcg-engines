{
  "name": "@tcg/gundam-cards",
  "version": "0.1.0",
  "description": "Card definitions and tools for Gundam Card Game",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src/",
    "tools/",
    "scripts/"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "check-types": "tsc --noEmit",
    "format": "oxfmt --write ./src",
    "lint": "oxlint --fix ./src",
    "test": "echo \"No tests specified\"",
    "check": "turbo format lint check-types"
  },
  "dependencies": {
    "@tcg/core": "workspace:*",
    "@tcg/gundam-types": "workspace:*",
    "immer": "11.0.1"
  },
  "devDependencies": {
    "@types/bun": "1.3.4",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "typescript": "5.9.3"
  }
}
