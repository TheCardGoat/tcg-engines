{
  "name": "@tcg/riftbound-types",
  "version": "0.1.0",
  "description": "Riftbound-specific type definitions for abilities, effects, and cards",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src/"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./abilities": {
      "types": "./src/abilities/index.ts",
      "default": "./src/abilities/index.ts"
    },
    "./abilities/condition-types": {
      "types": "./src/abilities/condition-types.ts",
      "default": "./src/abilities/condition-types.ts"
    },
    "./abilities/cost-types": {
      "types": "./src/abilities/cost-types.ts",
      "default": "./src/abilities/cost-types.ts"
    },
    "./abilities/effect-types": {
      "types": "./src/abilities/effect-types.ts",
      "default": "./src/abilities/effect-types.ts"
    },
    "./abilities/trigger-types": {
      "types": "./src/abilities/trigger-types.ts",
      "default": "./src/abilities/trigger-types.ts"
    },
    "./cards": {
      "types": "./src/cards/index.ts",
      "default": "./src/cards/index.ts"
    },
    "./targeting": {
      "types": "./src/targeting/index.ts",
      "default": "./src/targeting/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit && mkdir -p dist",
    "typecheck": "tsc --noEmit",
    "check-types": "tsc --noEmit",
    "format": "oxfmt --write ./src",
    "lint": "oxlint --fix ./src",
    "test": "echo 'No tests for types-only package'",
    "check": "turbo format lint check-types"
  },
  "dependencies": {
    "@tcg/core": "workspace:*",
    "@tcg/core-types": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "1.3.4",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "typescript": "5.9.3"
  }
}
