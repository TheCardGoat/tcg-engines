{
  "name": "@tcg/component-library",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "check": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check-types": "npm run check",
    "format": "bun x @biomejs/biome check --fix --max-diagnostics=none --diagnostic-level=error --linter-enabled=false .",
    "lint": "bun x @biomejs/biome lint --fix --max-diagnostics=none --diagnostic-level=error .",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "bun test",
    "test": "bun test",
    "test:e2e": "playwright test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./src/lib/index.ts",
  "module": "./src/lib/index.ts",
  "svelte": "./src/lib/index.ts",
  "types": "./src/lib/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/lib/index.ts",
      "import": "./src/lib/index.ts",
      "svelte": "./src/lib/index.ts",
      "default": "./src/lib/index.ts"
    }
  },
  "peerDependencies": {
    "svelte": "5.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.2",
    "@inlang/paraglide-js": "2.3.2",
    "@playwright/test": "1.55.1",
    "@storybook/addon-docs": "10.0.1",
    "@storybook/addon-svelte-csf": "5.0.10",
    "@storybook/sveltekit": "10.0.1",
    "@sveltejs/adapter-auto": "6.1.0",
    "@sveltejs/enhanced-img": "^0.8.4",
    "@sveltejs/kit": "2.43.2",
    "@sveltejs/package": "2.5.4",
    "@sveltejs/vite-plugin-svelte": "6.2.0",
    "@tailwindcss/typography": "0.5.18",
    "@tailwindcss/vite": "4.1.13",
    "@vitest/browser": "3.2.4",
    "playwright": "1.55.1",
    "publint": "0.3.13",
    "storybook": "10.0.1",
    "svelte": "5.39.5",
    "svelte-check": "4.3.2",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2",
    "vite": "7.1.7",
    "vite-plugin-devtools-json": "1.0.0",
    "vitest": "3.2.4",
    "vitest-browser-svelte": "1.1.0",
    "bun-types": "1.2.18"
  },
  "keywords": [
    "svelte"
  ],
  "dependencies": {
    "@iconify/svelte": "^5.0.2",
    "@unpic/svelte": "^1.0.0",
    "bits-ui": "^2.14.1",
    "clsx": "^2.1.1",

    "tailwind-merge": "^3.4.0"
  }
}
