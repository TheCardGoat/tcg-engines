{
  "name": "@tcg/gundam-types",
  "version": "0.1.0",
  "description": "Shared type definitions for Gundam Card Game",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src/"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./effects": {
      "types": "./src/effects/index.ts",
      "default": "./src/effects/index.ts"
    },
    "./cards": {
      "types": "./src/cards/card-types.ts",
      "default": "./src/cards/card-types.ts"
    },
    "./targeting": {
      "types": "./src/targeting/index.ts",
      "default": "./src/targeting/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "check-types": "tsc --noEmit",
    "format": "bun x oxfmt --write ./src",
    "lint": "bun x oxlint --fix ./src",
    "check": "turbo format lint check-types"
  },
  "dependencies": {
    "@tcg/core": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "1.3.4",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "typescript": "5.9.3"
  }
}
