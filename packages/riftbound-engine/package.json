{
  "name": "@tcg/riftbound",
  "version": "0.1.0",
  "description": "Riftbound TCG engine implementation using @tcg/core framework",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.d.ts",
  "files": [
    "src/"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./testing": {
      "types": "./src/testing/index.ts",
      "default": "./src/testing/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit && mkdir -p dist",
    "typecheck": "tsc --noEmit",
    "check-types": "tsc --noEmit",
    "format": "bun x @biomejs/biome check --fix --max-diagnostics=none --diagnostic-level=error --linter-enabled=false ./src",
    "lint": "bun x @biomejs/biome lint --fix --max-diagnostics=none --diagnostic-level=error ./src",
    "test": "echo \"No tests specified\"",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "check": "turbo format lint check-types test"
  },
  "dependencies": {
    "@tcg/core": "workspace:*",
    "@tcg/riftbound-types": "workspace:*",
    "immer": "11.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "1.3.4",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "typescript": "5.9.3"
  }
}
