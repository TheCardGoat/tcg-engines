{
  "extends": "@lorcanito/typescript-config/node.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@lorcanito/lorcana-engine": ["./src/index.ts"],
      "@lorcanito/lorcana-engine/*": ["./src/*"],
      "@lorcanito/shared": ["../../packages/shared/src/index.ts"],
      "@lorcanito/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
