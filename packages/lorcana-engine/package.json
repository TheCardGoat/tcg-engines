{
  "name": "@tcg/lorcana",
  "version": "0.1.0",
  "description": "Disney Lorcana TCG engine implementation using @tcg/core framework",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.d.ts",
  "files": [
    "src/"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./testing": {
      "types": "./src/testing/index.ts",
      "default": "./src/testing/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "check-types": "tsc --noEmit",
    "format": "bunx @biomejs/biome check --fix --max-diagnostics=none --diagnostic-level=error --linter-enabled=false ./src",
    "lint": "bunx @biomejs/biome lint --fix --max-diagnostics=none --diagnostic-level=error ./src",
    "test": "AGENT=1 bun test --silent",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "check": "turbo format lint check-types test"
  },
  "dependencies": {
    "@tcg/core": "workspace:*",
    "immer": "^10.1.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.4",
    "@types/bun": "1.2.14",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "typescript": "5.8.3"
  }
}
