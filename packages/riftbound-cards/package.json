{
  "name": "@tcg/riftbound-cards",
  "version": "0.1.0",
  "description": "Riftbound card definitions, parser, and tooling",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src/"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./parser": {
      "types": "./src/parser/index.ts",
      "default": "./src/parser/index.ts"
    },
    "./data": {
      "types": "./src/data/index.ts",
      "default": "./src/data/index.ts"
    },
    "./cards": {
      "types": "./src/cards/index.ts",
      "default": "./src/cards/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit && mkdir -p dist",
    "typecheck": "tsc --noEmit",
    "check-types": "tsc --noEmit",
    "format": "oxfmt --write ./src",
    "lint": "oxlint --fix ./src",
    "test": "echo \"No tests specified\"",
    "test:watch": "bun test --watch src/cards src/parser src/data",
    "test:coverage": "bun test --coverage src/cards src/parser src/data",
    "check": "turbo format lint check-types test",
    "fetch": "bun scripts/fetch-inputs.ts",
    "categorize": "bun scripts/categorize-text.ts",
    "pipeline": "bun run fetch && bun run categorize"
  },
  "dependencies": {
    "@tcg/riftbound-types": "workspace:*"
  },
  "devDependencies": {
    "@tcg/riftbound": "workspace:*",
    "@types/bun": "1.3.4",
    "bun-types": "^1.3.4",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "typescript": "5.9.3"
  }
}
