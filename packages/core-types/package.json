{
  "name": "@tcg/core-types",
  "version": "0.1.0",
  "description": "Core type definitions shared across all TCG engines",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src/"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./targeting": {
      "types": "./src/targeting/index.ts",
      "default": "./src/targeting/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit && mkdir -p dist",
    "typecheck": "tsc --noEmit",
    "check-types": "tsc --noEmit",
    "format": "bun x oxfmt --write ./src",
    "lint": "bun x oxlint --fix ./src",
    "test": "echo 'No tests for types-only package'",
    "check": "turbo format lint check-types"
  },
  "devDependencies": {
    "@types/bun": "1.2.14",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "typescript": "5.8.3"
  }
}
