{
  "name": "@tcg/lorcana-cards",
  "version": "0.1.0",
  "description": "Lorcana card definitions, parser, and tooling",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src/"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./parser": {
      "types": "./src/parser/index.ts",
      "default": "./src/parser/index.ts"
    },
    "./data": {
      "types": "./src/data/index.ts",
      "default": "./src/data/index.ts"
    },
    "./cards": {
      "types": "./src/cards/index.ts",
      "default": "./src/cards/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit && mkdir -p dist",
    "typecheck": "tsc --noEmit",
    "check-types": "tsc --noEmit",
    "format": "oxfmt --write ./src",
    "lint": "oxlint --fix ./src",
    "test": "AGENT=1 bun test --silent src/cards src/parser src/scripts src/data",
    "test:watch": "bun test --watch src/cards src/parser src/scripts src/data",
    "test:coverage": "bun test --coverage src/cards src/parser src/scripts src/data",
    "check": "turbo format lint check-types test",
    "fetch": "bun scripts/fetch-inputs.ts",
    "generate": "bun scripts/generate-cards.ts && bun run format",
    "generate:all": "bun run fetch && bun run generate"
  },
  "dependencies": {
    "@tcg/lorcana-types": "workspace:*",
    "chevrotain": "^11.0.3"
  },
  "devDependencies": {
    "@tcg/lorcana": "workspace:*",
    "@types/bun": "1.2.14",
    "bun-types": "^1.3.4",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "typescript": "5.8.3"
  }
}
