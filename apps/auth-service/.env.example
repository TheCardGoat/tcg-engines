# Auth Service Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database
# =============================================================================

# PostgreSQL connection string for auth database
AUTH_DATABASE_URL=postgresql://postgres:postgres@localhost:5433/tcg_auth

# =============================================================================
# Better Auth Configuration
# =============================================================================

# Secret key for session encryption (minimum 32 characters)
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-32-character-minimum-secret-here

# =============================================================================
# Discord OAuth (Optional)
# =============================================================================

# Discord OAuth credentials
# Get these from https://discord.com/developers/applications
AUTH_DISCORD_CLIENT_ID=
AUTH_DISCORD_CLIENT_SECRET=

# =============================================================================
# Server Configuration
# =============================================================================

# Port for the auth service (default: 3001)
AUTH_PORT=3001

# CORS origin configuration
# Use '*' for development, specific origins for production
AUTH_CORS_ORIGIN=*

# =============================================================================
# Rate Limiting
# =============================================================================

# Enable/disable rate limiting (default: true)
AUTH_RATE_LIMIT_ENABLED=true

# Global rate limit per minute (default: 200 anonymous, 300 authenticated)
AUTH_RATE_LIMIT_GLOBAL_MAX=200
AUTH_RATE_LIMIT_GLOBAL_MAX_AUTH=300

# Auth endpoint rate limit per minute (default: 10)
AUTH_RATE_LIMIT_AUTH_MAX=10

# =============================================================================
# Environment
# =============================================================================

# Node environment (development, production, test)
NODE_ENV=development
