# Content Management Service Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database
# =============================================================================

# PostgreSQL connection string for content database
# This is a SEPARATE database from auth-service
DATABASE_URL=postgresql://postgres:postgres@localhost:5434/tcg_content

# =============================================================================
# Auth Service Configuration
# =============================================================================

# Auth service URL for JWT verification via JWKS
# The content service fetches public keys from {AUTH_SERVICE_URL}/api/auth/jwks
AUTH_SERVICE_URL=http://localhost:3001

# =============================================================================
# Server Configuration
# =============================================================================

# Port for the content service (default: 3002)
PORT=3002

# CORS origin configuration
# Use '*' for development, specific origins for production
CORS_ORIGIN=*

# =============================================================================
# Rate Limiting
# =============================================================================

# Enable/disable rate limiting (default: true)
RATE_LIMIT_ENABLED=true

# Global rate limit per minute (default: 200 anonymous, 300 authenticated)
RATE_LIMIT_GLOBAL_MAX=200
RATE_LIMIT_GLOBAL_MAX_AUTH=300

# =============================================================================
# Environment
# =============================================================================

# Node environment (development, production, test)
NODE_ENV=development
